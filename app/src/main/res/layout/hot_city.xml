<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/beijing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="北京"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/tianjin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="天津"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/shanghai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="上海"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/nanjing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="南京"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/shijiazhuang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="石家庄"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/guangzhou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="广州"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/shenzhen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="深圳"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/zhuhai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="珠海"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/taiyuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="太原"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/suzhou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="苏州"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/hangzhou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="杭州"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/jinan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="济南"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/foshan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="佛山"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/changsha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="长沙"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/zhengzhou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="郑州"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/chongqing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="重庆"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/chengdu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="成都"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/wuhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="武汉"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/xiamen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="厦门"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/nanning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="南宁"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/qingdao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="青岛"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>